<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FileStrongbox.Views.PasswordDialog"
        Title="输入密码"
        Width="400"
        SizeToContent="Height"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <DockPanel>
        <Border DockPanel.Dock="Bottom" Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="0,1,0,0" Padding="20,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button x:Name="CancelButton"
                        Content="取消"
                        Width="80"
                        HorizontalContentAlignment="Center"
                        Click="OnCancelClick"/>
                <Button x:Name="OkButton"
                        Content="确定"
                        Width="80"
                        HorizontalContentAlignment="Center"
                        Classes="accent"
                        Click="OnOkClick"/>
            </StackPanel>
        </Border>

        <StackPanel Margin="20" Spacing="8">
            <TextBlock Text="密码"/>
            <TextBox x:Name="PasswordBox"
                     PasswordChar="*"
                     Watermark="请输入密码"/>

            <TextBlock x:Name="ConfirmLabel"
                       Text="确认密码"
                       Margin="0,8,0,0"/>
            <TextBox x:Name="ConfirmPasswordBox"
                     PasswordChar="*"
                     Watermark="请再次输入密码"/>
        </StackPanel>
    </DockPanel>
</Window>
